@inherits LayoutComponentBase
@implements IDisposable
@inject AuthenticationStateService AuthState
@inject NavigationManager Navigation
@inject SettingsService SettingsService
@inject IJSRuntime JSRuntime

@* Layout shell with floating controls and bottom navigation. *@

<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <div class="floating-brand" @onclick='() => Navigation.NavigateTo("/dashboard")'>
        <span class="brand-letter">J</span>
    </div>

    @if (AuthState.IsAuthenticated)
    {
        <div class="floating-user-avatar">
            <MudAvatar Color="Color.Secondary" Size="Size.Medium" Class="user-avatar-circle">
                @AuthState.GetCurrentUsername()?[0].ToString().ToUpper()
            </MudAvatar>
        </div>
    }

    <div class="theme-orb" @onclick="ToggleTheme">
        <MudIcon Icon="@(_isDarkMode ? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode)"
                 Size="Size.Medium"
                 Color="Color.Secondary" />
    </div>

    <MudMainContent Class="studio-main-content">
        <div class="page-content-wrapper">
            @Body
        </div>
    </MudMainContent>

    <div class="bottom-nav">
        <NavMenu />
    </div>

    <button class="fab" @onclick='() => Navigation.NavigateTo("/create-entry")'>
        <MudIcon Icon="@Icons.Material.Filled.Add" Class="fab-icon" />
    </button>
</MudLayout>

<style>
    :host { font-family: "Fraunces", "Manrope", serif; }

    .studio-main-content {
        background: transparent;
        padding-bottom: 110px;
        min-height: 100vh;
        position: relative;
        z-index: 1;
    }

    .page-content-wrapper {
        max-width: 1320px;
        margin: 0 auto;
        padding: 2rem 1.5rem 3rem;
    }

    .floating-brand {
        position: fixed;
        top: 1.4rem;
        left: 1.4rem;
        width: 56px;
        height: 56px;
        border-radius: 16px;
        background: linear-gradient(135deg, rgba(47, 107, 95, 0.2), rgba(201, 106, 75, 0.22));
        display: grid;
        place-items: center;
        box-shadow: var(--shadow-md);
        z-index: 1000;
        cursor: pointer;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        color: var(--text-primary);
        border: 1px solid var(--border-color);
        backdrop-filter: blur(8px);
    }

    .brand-letter {
        font-size: 24px;
        font-weight: 800;
        font-family: var(--font-heading);
    }

    .floating-brand:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
    }

    .floating-user-avatar {
        position: fixed;
        top: 1.4rem;
        right: 1.4rem;
        z-index: 1000;
    }

    .user-avatar-circle {
        box-shadow: var(--shadow-sm);
        border: 2px solid var(--border-color);
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .user-avatar-circle:hover {
        transform: translateY(-2px);
    }

    .theme-orb {
        position: fixed;
        bottom: 2.4rem;
        left: 2rem;
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: var(--surface-1);
        border: 1px solid var(--border-color);
        display: grid;
        place-items: center;
        box-shadow: var(--shadow-sm);
        cursor: pointer;
        transition: transform 0.3s ease;
        z-index: 1000;
    }

    .theme-orb:hover {
        transform: translateY(-2px);
    }

    .bottom-nav {
        position: fixed;
        left: 50%;
        bottom: 1.2rem;
        transform: translateX(-50%);
        width: min(720px, 92vw);
        background: rgba(255, 255, 255, 0.98);
        border: 1px solid rgba(31, 43, 42, 0.22);
        border-radius: 999px;
        box-shadow: var(--shadow-lg);
        backdrop-filter: blur(10px);
        padding: 0.4rem 0.6rem;
        z-index: 900;
    }

    [data-theme="Dark"] .bottom-nav {
        background: rgba(19, 27, 26, 0.95);
        border: 1px solid rgba(232, 240, 237, 0.18);
    }

    .fab {
        position: fixed;
        right: 2rem;
        bottom: 2.2rem;
        width: 56px;
        height: 56px;
        border-radius: 18px;
        border: none;
        background: var(--primary-color);
        color: white;
        box-shadow: var(--shadow-lg);
        cursor: pointer;
        display: grid;
        place-items: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        z-index: 1000;
    }

    .fab:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-lg);
    }

    .fab-icon {
        font-size: 26px !important;
    }

    @@media (max-width: 700px) {
        .page-content-wrapper { padding: 1.6rem 1.2rem 3rem; }
        .floating-brand, .floating-user-avatar { position: absolute; }
        .theme-orb { left: 1.2rem; }
        .fab { right: 1.2rem; }
    }
</style>

@code {
    private bool _isDarkMode = true;
    private MudThemeProvider _mudThemeProvider = null!;

    private MudTheme _theme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#2F6B5F",
            Secondary = "#C96A4B",
            Tertiary = "#E0B36A",
            Background = "#F7F2E9",
            Surface = "#FFFBF5",
            AppbarBackground = "#FFFBF5",
            DrawerBackground = "#F1E7D8",
            DrawerText = "#1F2B2A",
            TextPrimary = "#1F2B2A",
            TextSecondary = "#576B67",
            ActionDefault = "#556864",
            Divider = "rgba(31, 43, 42, 0.1)"
        },
        PaletteDark = new PaletteDark()
        {
            Primary = "#79B6A0",
            Secondary = "#F2A07B",
            Tertiary = "#E8C26E",
            Surface = "#151F1D",
            Background = "#101716",
            DrawerBackground = "#1B2624",
            AppbarBackground = "rgba(16, 23, 22, 0.85)",
            ActionDefault = "#9DB2AA",
            ActionDisabled = "rgba(157, 178, 170, 0.3)",
            TextPrimary = "#E8F0ED",
            TextSecondary = "#B9C7C1",
            Divider = "rgba(232, 240, 237, 0.12)",
            TableLines = "rgba(232, 240, 237, 0.06)"
        }
    };

    protected override async Task OnInitializedAsync()
    {
        var settings = await SettingsService.GetSettingsAsync();
        _isDarkMode = settings.Theme == "Dark";
        SettingsService.ThemeChanged += HandleThemeChanged;
    }

    private void HandleThemeChanged(string theme)
    {
        _isDarkMode = theme == "Dark";
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        SettingsService.ThemeChanged -= HandleThemeChanged;
    }

    async Task ToggleTheme()
    {
        _isDarkMode = !_isDarkMode;
        var theme = _isDarkMode ? "Dark" : "Light";
        await SettingsService.UpdateThemeAsync(theme);
        await JSRuntime.InvokeVoidAsync("themeManager.applyTheme", theme);
    }
}
