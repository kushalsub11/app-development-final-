@page "/dashboard"
@using JournalApp.Services
@using JournalApp.Data
@using JournalApp.Models

@* üåä COMPLETELY REDESIGNED DASHBOARD - Floating Islands + Circular Stats *@
<PageTitle>Ocean Journal - Dashboard</PageTitle>

<!-- Greeting Section - Floating Island -->
<div class="floating-island">
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Class="mb-4" ShowCloseIcon="true" CloseIconClicked="(() => errorMessage = string.Empty)">
            @errorMessage
        </MudAlert>
    }

    <div class="greeting-section">
        <h1 class="gradient-text">Hey @AuthState.GetCurrentUsername() üëã</h1>
        <p style="color: var(--text-secondary); font-size: 1.125rem;">Your thoughts are alive and glowing</p>
    </div>
</div>

@if (isLoading)
{
    <div style="display: flex; justify-content: center; align-items: center; min-height: 50vh;">
        <MudProgressCircular Color="Color.Secondary" Indeterminate="true" Size="Size.Large" />
    </div>
}
else
{
    <!-- Circular Stats - Arc Layout -->
    <div class="stats-arc">
        <div class="stat-circle glow-blue" style="animation-delay: 0s;">
            <div class="stat-circle-value">@(analytics?.TotalEntries ?? 0)</div>
            <div class="stat-circle-label">Entries</div>
        </div>
        <div class="stat-circle glow-pink" style="animation-delay: 0.1s; background: linear-gradient(135deg, var(--secondary-color), var(--accent-color));">
            <div class="stat-circle-value">@(analytics?.CurrentStreak ?? 0)</div>
            <div class="stat-circle-label">Streak</div>
        </div>
        <div class="stat-circle glow-teal" style="animation-delay: 0.2s; background: linear-gradient(135deg, var(--accent-color), var(--success-color));">
            <div class="stat-circle-value">@(analytics?.LongestStreak ?? 0)</div>
            <div class="stat-circle-label">Best</div>
        </div>
        <div class="stat-circle glow-blue" style="animation-delay: 0.3s; background: linear-gradient(135deg, var(--info-color), var(--primary-color));">
            <div class="stat-circle-value">@(analytics?.MissedDays ?? 0)</div>
            <div class="stat-circle-label">Missed</div>
        </div>
    </div>

    <!-- Wave Divider -->
    <div class="wave-divider"></div>

    <!-- Recent Entries - Horizontal Scrolling Carousel -->
    <div class="floating-island">
        <div class="section-header-new">
            <h2 class="gradient-text-teal">Recent Reflections</h2>
            <button class="pill-btn" @onclick='() => Navigation.NavigateTo("/entries")'>
                View All ‚Üí
            </button>
        </div>

        @if (recentEntries == null || !recentEntries.Any())
        {
            <div class="empty-state">
                <div style="font-size: 4rem; margin-bottom: 1rem;">üìù</div>
                <h3 style="color: var(--text-primary); margin-bottom: 0.5rem;">No entries yet</h3>
                <p style="color: var(--text-muted); margin-bottom: 1.5rem;">Start your journey with your first reflection</p>
            </div>
        }
        else
        {
            <div class="horizontal-timeline">
                @foreach (var entry in recentEntries)
                {
                    <div class="hex-card timeline-card" @onclick="(() => HandleEntryClick(entry))">
                        <div class="mood-splash @entry.PrimaryMoodCategory.ToString().ToLower()">
                            <span class="mood-emoji">@GetMoodEmoji(entry.PrimaryMood)</span>
                        </div>
                        <h4 style="color: var(--text-primary); margin-bottom: 0.5rem; font-size: 1.125rem;">@entry.Title</h4>
                        <p style="color: var(--text-muted); font-size: 0.875rem; margin-bottom: 0.75rem;">
                            @entry.EntryDate.ToString("MMM dd, yyyy")
                        </p>
                        @if (string.IsNullOrEmpty(entry.Pin))
                        {
                            <p class="entry-preview-text">@(entry.Content?.Length > 100 ? entry.Content.Substring(0, 100) + "..." : entry.Content)</p>
                        }
                        else
                        {
                            <p style="color: var(--warning-color); font-style: italic;">üîí Locked</p>
                        }
                        @if (!string.IsNullOrEmpty(entry.Tags))
                        {
                            <div class="tag-row">
                                @foreach (var tag in entry.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries).Take(2))
                                {
                                    <span class="mini-tag">#@tag.Trim()</span>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        }
    </div>

    <!-- Insights Panel -->
    <div class="floating-island">
        <div class="section-header-new">
            <h2 class="gradient-text">Quick Insights</h2>
        </div>

        <div class="insights-grid">
            <div class="insight-card octagon-card">
                <MudIcon Icon="@Icons.Material.Filled.TrendingUp" Color="Color.Secondary" Size="Size.Large" Class="insight-icon" />
                <h4>Most Frequent Mood</h4>
                <p class="insight-value">@(analytics?.MostFrequentMood ?? "N/A")</p>
            </div>

            <div class="insight-card octagon-card">
                <MudIcon Icon="@Icons.Material.Filled.LocalOffer" Color="Color.Tertiary" Size="Size.Large" Class="insight-icon" />
                <h4>Top Tags</h4>
                @if (analytics?.TagUsageCount != null && analytics.TagUsageCount.Any())
                {
                    <p class="insight-value">@string.Join(", ", analytics.TagUsageCount.Take(3).Select(t => t.Key))</p>
                }
                else
                {
                    <p class="insight-value">No tags yet</p>
                }
            </div>

            <div class="insight-card octagon-card">
                <MudIcon Icon="@Icons.Material.Filled.EmojiEvents" Color="Color.Primary" Size="Size.Large" Class="insight-icon" />
                <h4>Next Milestone</h4>
                <p class="insight-value">@(20 - (analytics?.TotalEntries % 20 ?? 0)) entries away</p>
            </div>
        </div>
    </div>
}

<style>
    /* Greeting Section */
    .greeting-section {
        text-align: center;
        padding: 2rem 0;
    }

    .greeting-section h1 {
        font-size: 3rem;
        margin-bottom: 0.5rem;
        animation: bounce-in 0.8s ease;
    }

    /* Stats Arc - Circular Stats */
    .stats-arc {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        padding: 3rem 0;
        flex-wrap: wrap;
    }

    /* Section Header */
    .section-header-new {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .section-header-new h2 {
        font-size: 2rem;
        margin: 0;
    }

    /* Horizontal Timeline Carousel */
    .horizontal-timeline {
        display: flex;
        gap: 1.5rem;
        overflow-x: auto;
        padding: 1rem 0;
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
    }

    .horizontal-timeline::-webkit-scrollbar {
        height: 8px;
    }

    .horizontal-timeline::-webkit-scrollbar-track {
        background: var(--surface-2);
        border-radius: 10px;
    }

    .horizontal-timeline::-webkit-scrollbar-thumb {
        background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
        border-radius: 10px;
    }

    .timeline-card {
        min-width: 320px;
        max-width: 320px;
        padding: 1.5rem;
        scroll-snap-align: start;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

    /* Mood Splash */
    .mood-splash {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .mood-splash.positive {
        background: linear-gradient(135deg, var(--success-color), #34D399);
    }

    .mood-splash.neutral {
        background: linear-gradient(135deg, var(--info-color), #22D3EE);
    }

    .mood-splash.negative {
        background: linear-gradient(135deg, var(--danger-color), #F87171);
    }

    .mood-splash.default {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    }

    .entry-preview-text  {
        color: var(--text-secondary);
        font-size: 0.925rem;
        line-height: 1.6;
        margin-bottom: 1rem;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .tag-row {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        margin-top: 1rem;
    }

    .mini-tag {
        background: rgba(var(--primary-color), 0.2);
        color: var(--primary-light);
        padding: 0.25rem 0.75rem;
        border-radius: var(--radius-pill);
        font-size: 0.75rem;
        font-weight: 600;
    }

    /* Insights Grid */
    .insights-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
    }

    .insight-card {
        text-align: center;
        padding: 2rem 1.5rem;
    }

    .insight-icon {
        margin-bottom: 1rem;
    }

    .insight-card h4 {
        color: var(--text-secondary);
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 0.75rem;
    }

    .insight-value {
        color: var(--text-primary);
        font-size: 1.5rem;
        font-weight: 700;
        font-family: var(--font-heading);
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        border: 2px dashed var(--border-color);
        border-radius: var(--radius-lg);
        background: rgba(var(--primary-color), 0.05);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .stats-arc {
            gap: 1rem;
        }

        .stat-circle {
            width: 110px;
            height: 110px;
        }

        .stat-circle-value {
            font-size: 2rem;
        }

        .timeline-card {
            min-width: 280px;
            max-width: 280px;
        }
    }
</style>
